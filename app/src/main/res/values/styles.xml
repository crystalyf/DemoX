<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorThemeOrange</item>
        <item name="colorPrimaryDark">@color/colorThemeOrange</item>
        <item name="colorAccent">@color/colorThemeOrange</item>
    </style>

    <style name="primary0">
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>
    </style>

    <style name="accent0">
        <item name="colorAccent">@color/md_blue_500</item>
    </style>

    <style name="primary1">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
    </style>

    <style name="accent1">
        <item name="colorAccent">@color/md_green_500</item>
    </style>

    <style name="commonContentTransparent">
        <item name="android:windowBackground">@color/colorTransparentBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- spinner -->
    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <!-- 输入带删除按钮的edittext style -->
    <style name="common_edit_text_style">
        <item name="android:textColorHint">#7C7F89</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- 输入带删除按钮的edittext 父布局的style (获取焦点改变颜色) -->
    <style name="PasswordInputEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#2196f3</item>
        <item name="colorControlActivated">#2490FF</item>
    </style>

    <style name="input_edit_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorInputEditHint</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="commonDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.Label.Layout">
        <item name="android:paddingTop">@dimen/padding_common_v</item>
        <item name="android:paddingBottom">@dimen/padding_common_v</item>
        <item name="android:paddingLeft">@dimen/padding_common_h</item>
        <item name="android:paddingRight">@dimen/padding_common_h</item>
    </style>

    <style name="AppTheme.DiverLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/color_division_line</item>
        <item name="android:background">@color/color_division_line</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- list label-->
    <style name="commonListLabelSpace">
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!-- 自定义下拉dialog-->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BaseBottomSheetDialogShape</item>
    </style>

    <style name="BaseBottomSheetDialogShape" parent="Widget.MaterialComponents.BottomSheet">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <!-- camera 拍照按钮 -->
    <style name="camera_general_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorThemeOrange</item>
        <item name="iconGravity">textStart</item>
        <item name="iconEndPadding">7dp</item>
    </style>


</resources>
